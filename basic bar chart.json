{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 700,
    "height": 150,
    "title": "Critical Mineral Deposites",
    "data": {
        "name": "critical minerals",
        "url": "https://raw.githubusercontent.com/kkir0008/FIT3179-Assignment-2/main/PP1802_CritMin_pts.csv"
    },
    "mark": {
        "type": "bar"
    },
    "params": [
        {
            "name": "Mineral Filter",
            "select": {
                "type": "point"
            }
        }
    ],
    "encoding": {
        "x": {
            "field": "CRITICAL_M",
            "type": "nominal",
            "title": "Critical Mineral Deposits"
        },
        "y": {
            "type": "quantitative",
            "aggregate": "count",
            "scale": {
                "type": "log"
            },
            "title": "Count of Mineral Deposits"
        },
        "color": {
            "type": "nominal",
            "field": "CRITICAL_M",
            "title": "Critical Minerals: ",
            "scale": {
                "domain": [
                    "Antimony",
                    "Barite",
                    "Beryllium",
                    "Cobalt",
                    "Fluorite",
                    "Gallium",
                    "Germanium",
                    "Graphite",
                    "Indium",
                    "Lithium",
                    "Manganese",
                    "Niobium and Tantalum",
                    "Platinum-Group Elements",
                    "Rare-Earth Elements",
                    "Rhenium",
                    "Tellurium",
                    "Tin",
                    "Titanium",
                    "Vanadium",
                    "Zirconium and Hafnium"
                ],
                "range": [
                    "#e41a1c",
                    "#984ea3",
                    "#ff7f00",
                    "#a6cee3",
                    "#377eb8",
                    "#a65628",
                    "#a6cee3",
                    "#1f78b4",
                    "#b2df8a",
                    "#33a02c",
                    "#fb9a99",
                    "#e31a1c",
                    "#fdbf6f",
                    "#ff7f00",
                    "#cab2d6",
                    "#6a3d9a",
                    "#ffff99",
                    "#b15928",
                    "#b2df8a",
                    "#66c2a5"
                ]
            }
        }
    }
}